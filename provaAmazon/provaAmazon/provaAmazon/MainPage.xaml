<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="provaAmazon.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Welcome to Xamarin.Forms!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Editor x:Name="textoPraTraduzir"  BackgroundColor="WhiteSmoke"  FontAttributes="Italic"  HeightRequest="40" ></Editor>


        <Button x:Name="botaoTranslate" Text="traduz" Clicked="BotaoTranslate_Clicked"></Button>

        <Editor x:Name="outputTranslated"  IsReadOnly="True" BackgroundColor="WhiteSmoke"  FontAttributes="Italic"  HeightRequest="40" ></Editor>

    </StackLayout>

</ContentPage>
